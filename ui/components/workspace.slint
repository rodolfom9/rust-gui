// Grade de fundo estilo CAD
component GridBackground inherits Rectangle {
    // Grade mais densa e escura
    for y in 20: Rectangle {
        y: mod(y, 20) * parent.height / 20;
        height: 1px;
        background: #303030;
    }
    
    for x in 20: Rectangle {
        x: mod(x, 20) * parent.width / 20;
        width: 1px;
        background: #303030;
    }
    
    // Linhas principais mais visíveis (a cada 5 linhas)
    for y in 4: Rectangle {
        y: mod(y, 4) * parent.height / 4;
        height: 1px;
        background: #404040;
    }
    
    for x in 4: Rectangle {
        x: mod(x, 4) * parent.width / 4;
        width: 1px;
        background: #404040;
    }
}

// Área de trabalho principal estilo CAD (sem scroll, tela cheia)
export component WorkSpace inherits Rectangle {
    background: #1e1e1e;
    
    // Grade de fundo estilo CAD ocupando tudo
    GridBackground {
        width: parent.width;
        height: parent.height;
    }
    
    // Área central de conteúdo (card flutuante)
    VerticalLayout {
        padding: 48px;
        alignment: center;
        
        Rectangle {
            width: 500px;
            height: 350px;
            background: #252525;
            border-radius: 12px;
            border-width: 2px;
            border-color: #3d3d3d;
            drop-shadow-blur: 16px;
            drop-shadow-color: #00000040;
            
            VerticalLayout {
                padding: 40px;
                spacing: 28px;
                alignment: center;
                
                Image {
                    source: @image-url("../../images/themes/default/mActionAddMap.svg");
                    width: 72px;
                    height: 72px;
                }
                
                Text {
                    text: "Área de Desenho CAD";
                    color: #e0e0e0;
                    font-size: 26px;
                    font-weight: 600;
                    horizontal-alignment: center;
                }
                
                Text {
                    text: "Comece adicionando camadas vetoriais\nou criando novos elementos geométricos";
                    color: #999999;
                    font-size: 15px;
                    horizontal-alignment: center;
                    wrap: word-wrap;
                }
                
                HorizontalLayout {
                    spacing: 12px;
                    alignment: center;
                    
                    // Botão Adicionar Camada
                    Rectangle {
                        height: 44px;
                        width: 180px;
                        background: #0d7377;
                        border-radius: 6px;
                        
                        states [
                            hover when touch-area.has-hover: {
                                background: #0e8388;
                            }
                            pressed when touch-area.pressed: {
                                background: #0b5f63;
                            }
                        ]
                        
                        touch-area := TouchArea { }
                        
                        HorizontalLayout {
                            padding: 12px;
                            spacing: 10px;
                            alignment: center;
                            
                            Image {
                                source: @image-url("../../images/themes/default/mActionAdd.svg");
                                width: 20px;
                                height: 20px;
                            }
                            
                            Text {
                                text: "Adicionar Camada";
                                color: #ffffff;
                                font-size: 14px;
                                font-weight: 600;
                                vertical-alignment: center;
                            }
                        }
                    }
                    
                    // Botão Nova Geometria
                    Rectangle {
                        height: 44px;
                        width: 180px;
                        background: #323232;
                        border-radius: 6px;
                        border-width: 1px;
                        border-color: #555555;
                        
                        states [
                            hover when touch-area2.has-hover: {
                                background: #3a3a3a;
                                border-color: #666666;
                            }
                            pressed when touch-area2.pressed: {
                                background: #282828;
                            }
                        ]
                        
                        touch-area2 := TouchArea { }
                        
                        HorizontalLayout {
                            padding: 12px;
                            spacing: 10px;
                            alignment: center;
                            
                            Image {
                                source: @image-url("../../images/themes/default/mActionCapturePolygon.svg");
                                width: 20px;
                                height: 20px;
                            }
                            
                            Text {
                                text: "Nova Geometria";
                                color: #e0e0e0;
                                font-size: 14px;
                                font-weight: 600;
                                vertical-alignment: center;
                            }
                        }
                    }
                }
            }
        }
    }
}
